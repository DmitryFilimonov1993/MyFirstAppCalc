<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GenericInputEditText" parent="Widget.AppCompat.EditText">

        <item name="android:maxLength">12</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
    </style>

    <style name="GenericOutputTextView" parent="TextAppearance.AppCompat">

        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:maxLength">12</item>
    </style>


</resources>
